{
  "name": "experiments",
  "version": "0.0.1",
  "description": "Experiments with nodejs",
  "main": "index.js",
  "scripts": {
    "start": "node index.js",
    "test": "echo \"Error: no test specified\" && exit 1",
    "sass": "sass public/sass/app.scss:public/css/all.css",
    "sass:w": "sass --watch public/sass/app.scss:public/css/all.css",
    "sass:ws": "sass --watch --sourcemap --poll public/sass/app.scss:public/css/all.css",
    "build": "npm run sass && grunt build:prod",
    "startup": "npm install && npm run build && npm start"
  },
  "devDependencies": {
    "grunt": "~0.4.5",
    "grunt-contrib-concat": "~0.4.0",
    "grunt-contrib-uglify": "~0.5.0",
    "grunt-contrib-clean": "~0.5.0"
  },
  "dependencies": {
    "express": "~4.4.4",
    "nedb": "~0.10.5",
    "connect": "~3.0.1",
    "body-parser": "~1.4.3",
    "method-override": "~2.0.2",
    "express-hbs": "~0.7.10"
  }
}
